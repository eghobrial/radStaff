{% extends 'base.html.twig' %}

{% block body %}
    <h1>Faculty</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ faculty.id }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ faculty.firstname }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ faculty.lastname }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ faculty.email }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ faculty.phone }}</td>
            </tr>
            <tr>
                <th>Notes</th>
                <td>{{ faculty.notes }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('faculty_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('faculty_edit', { 'id': faculty.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
